    <div><input id="box" type="number" placeholder="length value"></div>
    <div><button type="submit" onclick="vishal()">result</button></div>
    <div id="result"></div>
    <script>
        function vishal()
       {
         let c=Number(document.getElementById("box").value)
        let process=c/10
        
        let answer=document.getElementById("result")
        answer.innerHTML=process
    }
    </script>
    
